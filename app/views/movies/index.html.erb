<h1>Rotten Mangoes</h1>

<%= link_to "Submit a movie!", new_movie_path %><br>
<%= link_to "Back to all movies", movies_path %>
<hr>

<h2>Search for a movie!</h2>

<%= form_tag(movies_path, { method: :get}) do %>
  <p>
    <%= label_tag "Search" %>
    <%= text_field_tag :term, params[:term] %>
    <%= label_tag "Runtime in minutes" %>
    <%= select_tag(:runtime_in_minutes, options_for_select([
      ["--", 0],
      ["Under 90 minutes", 1],
      ["Between 90 and 120 minutes", 2],
      ["Over 120 minutes", 3]
      ])
    ) %>
    <%= submit_tag "search", name: nil %>
  </p>
<% end %>


<% @movies.each do |movie| %>
  <%= image_tag(movie.poster_image) %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3>Score:
  <% if movie.review_average == nil %>
    No reviews yet!
  <% else %>
    <%= movie.review_average %>/10</h3>
  <% end %>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <p>Submitted by: <%= movie.user.firstname %>
<% end %>
